From e43c26604cee3bc9dd7cf7744a7efe212d197424 Mon Sep 17 00:00:00 2001
From: hmz007 <hmz007@gmail.com>
Date: Wed, 26 Feb 2020 19:39:24 +0800
Subject: [PATCH 33/73] arm64: dts: nanopi-r2: add nodes for gpio-leds

Signed-off-by: hmz007 <hmz007@gmail.com>
---
 .../dts/rockchip/rk3328-nanopi-r2-common.dtsi   |  2 +-
 .../dts/rockchip/rk3328-nanopi-r2-rev00.dts     | 17 +++++++++++++++++
 2 files changed, 18 insertions(+), 1 deletion(-)

diff --git a/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-common.dtsi b/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-common.dtsi
index 36890bb7f400..74bb46926c18 100644
--- a/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-common.dtsi
+++ b/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-common.dtsi
@@ -518,7 +518,7 @@ otg_vbus_drv: otg-vbus-drv {
 	gpio-leds {
 		leds_gpio: leds-gpio {
 			rockchip,pins = <0 RK_PA2 RK_FUNC_GPIO &pcfg_pull_none>;
-	   };
+		};
 	};
 };
 
diff --git a/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-rev00.dts b/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-rev00.dts
index ba39a6d0e0a8..0d1e0507d23f 100644
--- a/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-rev00.dts
+++ b/arch/arm64/boot/dts/rockchip/rk3328-nanopi-r2-rev00.dts
@@ -60,6 +60,23 @@ &i2c0 {
 
 &leds {
 	status = "okay";
+
+	led@2 {
+		gpios = <&gpio2 RK_PB7 GPIO_ACTIVE_HIGH>;
+		label = "lan_led";
+	};
+
+	led@3 {
+		gpios = <&gpio2 RK_PC2 GPIO_ACTIVE_HIGH>;
+		label = "wan_led";
+	};
+};
+
+&leds_gpio {
+	rockchip,pins =
+		<0 RK_PA2 RK_FUNC_GPIO &pcfg_pull_none>,
+		<2 RK_PB7 RK_FUNC_GPIO &pcfg_pull_none>,
+		<2 RK_PC2 RK_FUNC_GPIO &pcfg_pull_none>;
 };
 
 &pwm2 {
